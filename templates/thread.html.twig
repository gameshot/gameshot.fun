{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="/css/.css" />
{% endblock %}


{% block title %} GAME SHOT{% endblock %}

{% block body %}

    <div class="card">
        <h5 class="card-header d-flex justify-content-between">
            <span>{{ threads[0].getTopic().getName() }}</span>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <span><a href="{{ path('create_thread', { name : threads[0].getTopic().getName()|lower } ) }}" type="button" class="btn btn-dark">New thread</a></span>
            {% endif %}
        </h5>
        {% for thread in threads %}
            <div class="card-body">
                <a href="/forum/{{ threads[0].getTopic().getLabel() }}/thread/{{ thread.getId() }}" class="card-link">{{ thread.getName()}}</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}