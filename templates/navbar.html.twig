
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Cairo" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../public/css/disclaimer.css" />
{% endblock %}
{% block 'javascript' %}
<script src="{{ url('https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css') }}"></script>
{% endblock %}


<nav class="navbar navbar-expand-lg navbar-light bg-light">
  	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    	<span class="navbar-toggler-icon"></span>
  	</button>
    {%  set route = app.request.get('_route') %}
  	<div class="collapse navbar-collapse" id="navbarSupportedContent">
    	<ul class="navbar-nav mr-auto">
      		<li class="nav-item{% if route == 'homepage' %} active{% endif %}">
        		<a class="nav-link" href="{{ path("homepage") }}">homepage</a>
      		</li>
      		<li class="nav-item{% if route == 'about' %} active{% endif %}">
        		<a class="nav-link" href="{{ path("about") }}">about</a>
      		</li>
    	</ul>
  	</div>
</nav>