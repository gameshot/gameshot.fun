{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="/css/verification.css" />
{% endblock %}

{% block navbar %}
{% endblock %}

{% block body %}
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Email verification:</h5>
            <h6 class="card-subtitle mb-2 alert alert-success">Verified</h6>
            <p class="card-text">Welcome! You will be redirected in 10 seconds!</p>
            <a href="{{ path('game') }}" class="card-link">Go home now!</a>
        </div>
    </div>
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/scripts/verification.js"></script>
{% endblock %}
