{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- <link rel="stylesheet" type="text/css" href="/css/.css" /> -->
{% endblock %}


{% block title %} GAME SHOT{% endblock %}

{% block body %}
    <div class="input-group mb-3">
        <input type="text" class="form-control" aria-describedby="basic-addon2" id="gameSearch">
        <div class="input-group-append">
            <button type="button" class="btn btn-default" id="gameSearchButton">
                Search
            </button>
        </div>
        <ul id="gameResults"></ul>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.thread.name) }}
        {{ form_row(form.content) }}

        {{ form_end(form) }}
    {% else %}
        <div class="alert alert-warning" role="alert">
            You need to be logged in to access this page!!
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/gameSearch.js"></script>
{% endblock %}